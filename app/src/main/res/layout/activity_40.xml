<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Activity38">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_marginTop="5sp"
            android:layout_margin="10sp"
            android:layout_height="65sp"
            app:cardCornerRadius="12sp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:src="@drawable/logo"
                    android:padding="5sp"/>

                android:contentDescription="TODO" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/katholische6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_margin="10sp"
            app:cardCornerRadius="12sp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="200sp"
                    android:layout_height="100sp"
                    android:src="@drawable/seventh"
                    android:padding="5sp"

                    android:contentDescription="TODO" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Katholische Hofkirche"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:paddingTop="30sp"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="508dp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:columnCount="2"
            android:rowCount="2">

            <android.support.v7.widget.CardView
                android:id="@+id/katholische_image3"
                android:layout_width="150sp"
                android:layout_height="172sp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="10sp"
                app:cardCornerRadius="12sp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="452dp"
                    android:padding="5sp"
                    android:src="@drawable/thseven" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="8dp"
                    android:padding="3dip"
                    android:paddingTop="30sp"
                    android:paddingBottom="30sp"
                    android:text="This picture from the 19th century shows the Royal Court Church as seen from the Zwinger and Semper Gallery. Since the building was finished in 1751 no more exterior changes were made apart from some maintenance work."
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </android.support.v7.widget.CardView>

        </GridLayout>
    </LinearLayout>

</ScrollView>