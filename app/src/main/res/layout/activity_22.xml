<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Activity21">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_marginTop="5sp"
            android:layout_margin="10sp"
            android:layout_height="65sp"
            app:cardCornerRadius="12sp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:src="@drawable/logo"
                    android:padding="5sp"/>

                android:contentDescription="TODO" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/frauenkirche6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_margin="10sp"
            app:cardCornerRadius="12sp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="200sp"
                    android:layout_height="100sp"
                    android:src="@drawable/second"
                    android:padding="5sp"

                    android:contentDescription="TODO" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Frauenkirche"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:paddingTop="30sp"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="508dp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:columnCount="2"
            android:rowCount="2">

            <android.support.v7.widget.CardView
                android:id="@+id/frauenkirche_image3"
                android:layout_width="150sp"
                android:layout_height="172sp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="10sp"
                app:cardCornerRadius="12sp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="346dp"
                    android:padding="5sp"
                    android:src="@drawable/seventeen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="8dp"
                    android:padding="3dip"
                    android:paddingTop="30sp"
                    android:paddingBottom="30sp"
                    android:text="Though this picture seems a little different from the one taken in 1855, not much changed. The buildings surrounding the church only seem different since the picture taken is mirror inverted.  If one takes a closer look to the image one can make out the silhouette of several people which shows how well frequented the church and the surroundings must have been."
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </android.support.v7.widget.CardView>

        </GridLayout>
    </LinearLayout>

</ScrollView>